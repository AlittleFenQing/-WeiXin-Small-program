<!--logs.wxml-->
<import src="post-item/post-item-template.wxml"/>
<view class='body'>
 <swiper style='width:100%;height:500rpx;' indicator-dots='true' autoplay='true' interval='5000'>
  <swiper-item>
    <image src='/images/post/bl.png' style='width:100%;height:500rpx;'></image>
  </swiper-item>
  <swiper-item>
     <image src='/images/post/crab.png' style='width:100%;height:500rpx;'></image>
  </swiper-item>
  <swiper-item>
     <image src='/images/post/cat.png' style='width:100%;height:500rpx;'></image>
  </swiper-item>
 </swiper>

<block wx:for="{{post_key}}" wx:for-item="item" wx:key="postId" wx:for-index="idx">
  <!-- <template> -->
  <view   catchtap="onPostTap" data-postId="{{item.postId}}">
     <template is="postItem" data="{{...item}}"/>
  </view>
</block>
 
</view>
